#include <stdio.h>
#include <string.h>
int main(){
  char str [100] ;
  gets(str);
  int count=0;
  for(int i=0; str[i]!='\0';i++){
      count++; //for the size of string
  }
  printf("%d\n",count);
  for(int i=count-1; i>=0; i--){ //as string counting starts from 0 so we need to minus the size 
     //printf("%c",str[i]); //if we want to print char by char we have to print in the loop
  }
  puts(str); //as puts func prints whole string so no need to include this in loop


return 0;
}


